[Unit]
Description=Kaede Recorder

[Service]
WorkingDirectory=/home/eagletmt/work/kaede
User=eagletmt
ExecStart=/usr/bin/bundle exec bin/kaede scheduler -c kaede.rb
ExecReload=/usr/bin/bundle exec bin/kaede reload-scheduler -c kaede.rb
ExecStop=/usr/bin/bundle exec bin/kaede stop-scheduler -c kaede.rb
Restart=always
KillMode=none
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
